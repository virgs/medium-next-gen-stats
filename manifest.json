{
  "name": "Medium Next Generation Stats",
  "version": "1.0.0",
  "description": "Medium Next Generation Stats",
  "manifest_version": 2,
  "author": "Guilherme Virgs Moraes <http://pagehub.me/virgs>",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://medium.com/*/stats"
      ],
      "run_at": "document_idle",
      "css": [
        "src/css/mngs.css"
      ],
      "js": [
        "src/libs/Chart.bundle.js",
        "src/stats/next-gen-stats.js"
      ]
    }
  ],
  "icons": {
    "128": "src/images/icon-128.png"
  },
  "browser_action": {
    "default_title": "Medium Next Gen Stats"
  }
}
