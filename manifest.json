{
  "name": "Medium Next Generation Stats",
  "version": "1.0.7",
  "description": "Enrich medium stats with Next Generation ones",
  "manifest_version": 2,
  "author": "Guilherme Virgs Moraes <https://pagehub.me/virgs>",
  "permissions": [
  ],
  "content_scripts": [
    {
      "matches": [
        "https://medium.com/*/stats",
        "https://medium.com/*/stats/",
        "https://medium.com/*/stats/stories"
      ],
      "run_at": "document_idle",
      "css": [
        "src/css/mngs.css"
      ],
      "js": [
        "src/libs/regular.js",
        "src/libs/solid.js",
        "src/libs/fontawesome.js",
        "src/libs/Chart.bundle.js",
        "src/js/buy.js",
        "src/js/vertical-stacked-bar-chart-generator.js",
        "src/js/pie-chart-generator.js",
        "src/js/chart-generator.js",
        "src/js/ranges.js",
        "src/js/renew-html.js",
        "src/js/renew-publication-html.js",
        "src/js/main.js"
      ]
    }
  ],
  "icons": {
    "48": "images/ic_launcher-48.png",
    "72": "images/ic_launcher-72.png",
    "96": "images/ic_launcher-96.png",
    "144": "images/ic_launcher-144.png",
    "192": "images/ic_launcher-192.png",
    "512": "images/ic_launcher-512.png"
  },
  "browser_action": {
    "default_title": "Medium Next Generation Stats"
  }
}
