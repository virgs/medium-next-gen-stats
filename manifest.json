{
  "name": "Medium Next Generation Stats",
  "version": "0.0.1",
  "description": "Medium Next Generation Stats",
  "manifest_version": 2,
  "author": "Guilherme Virgs Moraes <@virgs>",
  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent",
    "https://medium.com/",
    "https://cdn-images-1.medium.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://medium.com/*/stats*"
      ],
      "run_at": "document_idle",
      "css": [
        "src/css/mngs.css"
      ],
      "js": [
        "src/libs/Chart.bundle.js",
        "src/stats/stats-total.js"
      ]
    }
  ],
  "icons": {
    "128": "src/images/icon-128.png"
  },
  "browser_action": {
    "default_title": "Medium Next Generation Stats"
  }
}
